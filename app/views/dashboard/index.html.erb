<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .nav-link {
      font-weight: 500;
    }
    .profile-info {
      display: flex;
      align-items: center;
      gap: 10px;
    }
    .card-buttons button {
      margin-right: 10px;
    }
  </style>
</head>
<body>


  <!-- Main Content -->
  <div class="container mt-4">
    <div class="card p-4">
      <!-- Buttons -->
      <div class="card-buttons text-center mb-4">
      <button class="btn btn-primary" onclick="window.location.href='<%= new_normal_slip_path %>'">Normal Slip</button>
        <button class="btn btn-success">Night Slip</button>
        <button class="btn btn-info text-white">Special Slip</button>
        <button class="btn btn-warning">Slip Payment</button>
      </div>

      <!-- Filters -->
      <div class="row align-items-center">
        <div class="col-md-3 mb-3">
          <label for="type" class="form-label">Type:</label>
          <select id="type" class="form-select">
            <option>All</option>
            <option>Option 1</option>
            <option>Option 2</option>
          </select>
        </div>
        <div class="col-md-3 mb-3">
          <label for="status" class="form-label">Status:</label>
          <select id="status" class="form-select">
            <option>All</option>
            <option>Approved</option>
            <option>Pending</option>
          </select>
        </div>
        <div class="col-md-3 mb-3">
          <label for="startDate" class="form-label">Start Date:</label>
          <input type="date" id="startDate" class="form-control" value="2024-12-22">
        </div>
        <div class="col-md-3 mb-3">
          <label for="endDate" class="form-label">End Date:</label>
          <input type="date" id="endDate" class="form-control" value="2024-12-22">
        </div>
      </div>
      <div class="text-center">
        <button class="btn btn-primary">Apply Filters</button>
      </div>
    </div>

    <!-- Help Text -->
    <p class="text-center text-danger mt-3">
      "For assistance with payment approvals and slip cancellations, please contact"
    </p>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

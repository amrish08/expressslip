<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow p-4" style="width: 350px;">
    <div class="text-center">
    <img src="<%= asset_path('logo.jpg') %>" alt="Logo" class="mb-3" style="max-width: 100px;">
      <h2 class="mb-4">Login</h2>
    </div>
    <% if flash[:alert] %>
    <div class="alert alert-danger mt-3 text-center"><%= flash[:alert] %></div>
    <% end %>
    <%= form_with(url: login_path, scope: :session, local: true, class: "needs-validation") do |f| %>
      <div class="mb-3">
        <%= f.label :userid, class: "form-label" %>
        <%= f.text_field :userid, class: "form-control", required: true %>
      </div>
      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control", required: true %>
      </div>
      <div class="text-center">
        <%= f.submit "Login", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>
